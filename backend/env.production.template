# =============================================================================
# BACKEND PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to backend/.env.production and replace all placeholder values
# with actual production credentials

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://assignmentai_user:${DB_PASSWORD}@${DB_HOST}:5432/assignmentai_prod
POSTGRES_SERVER=${DB_HOST}
POSTGRES_USER=assignmentai_user
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=assignmentai_prod
DB_HOST=your-db-host.com
DB_PASSWORD=your-secure-db-password

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL_CHARS=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15
SESSION_TIMEOUT_MINUTES=30
ENABLE_2FA=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_PASSWORD_RESET=True
ENABLE_SOCIAL_LOGIN=True

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_PERIOD=60

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Note: Models are automatically selected based on user subscription:
# - Free Plan: gpt-4.1-nano (30K tokens)
# - Plus Plan: gpt-3.5-turbo (50K tokens) 
# - Pro Plan: gpt-4-turbo (75K tokens)
# - Max Plan: gpt-4 (100K tokens)
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4.1-nano  # Default model (can be overridden by subscription)
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
BACKEND_URL=https://api.assignmentai.app

# =============================================================================
# CORS
# =============================================================================
FRONTEND_URL=https://assignmentai.app
ALLOWED_ORIGINS=https://assignmentai.app,https://www.assignmentai.app,https://api.assignmentai.app

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@assignmentai.app
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAILS_FROM_EMAIL=noreply@assignmentai.app
EMAILS_FROM_NAME=AssignmentAI
EMAILS_ENABLED=True

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_BUCKET_NAME=assignmentai-prod-files
AWS_S3_BUCKET=assignmentai-prod-files
CLOUDFRONT_DISTRIBUTION_ID=${CLOUDFRONT_DISTRIBUTION_ID}
CLOUDFRONT_DOMAIN=cdn.assignmentai.app

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_PRICE_FREE=price_free_plan_id
STRIPE_PRICE_PLUS=price_plus_plan_id
STRIPE_PRICE_PRO=price_pro_plan_id
STRIPE_PRICE_MAX=price_max_plan_id

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
FACEBOOK_CLIENT_ID=${FACEBOOK_CLIENT_ID}
FACEBOOK_CLIENT_SECRET=${FACEBOOK_CLIENT_SECRET}
APPLE_CLIENT_ID=${APPLE_CLIENT_ID}
APPLE_CLIENT_SECRET=${APPLE_CLIENT_SECRET}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/assignmentai

# =============================================================================
# FIRST SUPERUSER (CHANGE AFTER FIRST LOGIN)
# =============================================================================
FIRST_SUPERUSER=admin@assignmentai.app
FIRST_SUPERUSER_PASSWORD=change-this-password-immediately
USERS_OPEN_REGISTRATION=True

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_ANALYSIS=True

ENABLE_FILE_UPLOAD=True
ENABLE_ANALYTICS=True
ENABLE_MAINTENANCE_MODE=False
ENABLE_BETA_FEATURES=False

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_UPLOADS=5
CACHE_TTL=3600
SESSION_STORE=redis 