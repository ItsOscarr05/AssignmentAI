{
  "name": "assignmentai",
  "version": "1.0.0",
  "description": "A comprehensive assignment management system with AI-powered features",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "test": "bash scripts/run-coverage.sh",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && py -m pytest tests -v",
    "test:watch": "concurrently \"npm run test:frontend:watch\" \"npm run test:backend:watch\"",
    "test:frontend:watch": "cd frontend && npm test -- --watch",
    "test:backend:watch": "cd backend && py -m pytest tests -v --watch",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && py -m flake8 app tests",
    "lint:fix": "concurrently \"npm run lint:frontend:fix\" \"npm run lint:backend:fix\"",
    "lint:frontend:fix": "cd frontend && npm run lint:fix",
    "lint:backend:fix": "cd backend && py -m black app tests",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend is Python-based, no build step required'",
    "analyze": "cd frontend && npm run analyze",
    "performance": "cd frontend && npm run performance"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.10.0",
    "concurrently": "^8.2.0",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jsdom": "^26.1.0",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "AssignmentAI Team",
  "license": "MIT"
}
