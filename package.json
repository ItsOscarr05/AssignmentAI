{
  "name": "assignmentai",
  "version": "1.0.0",
  "description": "A comprehensive assignment management system with AI-powered features",
  "scripts": {
    "start": "concurrently \"pnpm run start:frontend\" \"pnpm run start:backend\"",
    "start:frontend": "cd frontend && pnpm dev",
    "start:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "test": "bash scripts/run-coverage.sh",
    "test:frontend": "cd frontend && pnpm test",
    "test:backend": "cd backend && py -m pytest tests -v",
    "test:watch": "concurrently \"pnpm run test:frontend:watch\" \"pnpm run test:backend:watch\"",
    "test:frontend:watch": "cd frontend && pnpm test -- --watch",
    "test:backend:watch": "cd backend && py -m pytest tests -v --watch",
    "lint": "concurrently \"pnpm run lint:frontend\" \"pnpm run lint:backend\"",
    "lint:frontend": "cd frontend && pnpm lint",
    "lint:backend": "cd backend && py -m flake8 app tests",
    "lint:fix": "concurrently \"pnpm run lint:frontend:fix\" \"pnpm run lint:backend:fix\"",
    "lint:frontend:fix": "cd frontend && pnpm lint:fix",
    "lint:backend:fix": "cd backend && py -m black app tests",
    "build": "pnpm run build:frontend",
    "build:frontend": "cd frontend && pnpm build",
    "build:backend": "echo 'Backend is Python-based, no build step required'",
    "analyze": "cd frontend && pnpm analyze",
    "performance": "cd frontend && pnpm performance"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "AssignmentAI Team",
  "license": "MIT"
}
